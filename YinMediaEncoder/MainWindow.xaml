                    <RadioButton x:Name="AudioEncodeWavOption" Content="Encode WAV (lossless)" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" GroupName="AudioAction" IsChecked="{Binding AudioAction, ConverterParameter={x:Static Business:AudioActions.EncodeWav}, Converter={StaticResource RadioButtonCheckedConverter}}" TabIndex="80"/>
                    <RadioButton x:Name="AudioEncodeFlacOption" Content="Encode FLAC (lossless)" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" GroupName="AudioAction" IsChecked="{Binding AudioAction, ConverterParameter={x:Static Business:AudioActions.EncodeFlac}, Converter={StaticResource RadioButtonCheckedConverter}}" TabIndex="81"/>
