<UserControl x:Class="YinMediaEncoder.WmpPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
        xmlns:ax="clr-namespace:MediaPlayer;assembly=MediaPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <WindowsFormsHost Name="formsHost" Panel.ZIndex="200">
            <ax:WindowsMediaPlayer x:Name="Player" x:FieldModifier="public"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
