        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HanumanInstitute.CommonWpfApp"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="477.068" Width="578.571" ShowInTaskbar="False">
